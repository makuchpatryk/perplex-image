{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "includes": ["types/*.d.ts"],
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./*"],
      "~core/*": ["./modules/core/*"],
      "~ui/*": ["./modules/ui/*"],
      "~game/*": ["./modules/game/*"]
    }
  }
}
